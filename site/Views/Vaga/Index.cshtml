@model IEnumerable<Dados.Vaga>

@{
    ViewBag.Title = "Index";
}

<h2>View1</h2>

<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("Criar Novo", "Create")
    </div>
</div>

<table class="table table-bordered table-hover">
    <tr>
        <th>Andar</th>

        <th>Bloco</th>

        <th>Nome</th>

        <th>Situação</th>

        <th>Carro</th>

        <th>Deficiente</th>

        <th>Bloqueada</th>

        <th>Endereco do Sensor</th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bloco.Andar.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bloco.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Situacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carro.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deficiente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bloqueada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnderecoSensor)
            </td>
            <td>
                @Html.ActionLink("Consultar", "Details", new { id = item.Id }) |
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
