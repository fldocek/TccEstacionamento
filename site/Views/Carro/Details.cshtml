@model Dados.Carro

@{
    ViewBag.Title = "Details";
}

<div class="col-lg-6">

    <h2>Carro</h2>

    <div class="row">

        <div class="col-lg-6 form-group">
            <label>Cliente</label>
            <p class="form-control-static">@Model.Cliente.Nome</p>
        </div>

        <div class="col-lg-6 form-group">
            <label>Placa</label>
            <p class="form-control-static">@Model.Placa</p>
        </div>

        <div class="col-lg-6 form-group">
            <label>Marca</label>
            <p class="form-control-static">@Model.Marca</p>
        </div>

        <div class="col-lg-6 form-group">
            <label>Tag</label>
            <p class="form-control-static">@Model.Tag</p>
        </div>

    </div>

        <button type="button" class="btn btn-primary" 
                onclick="window.location='@Url.Action("Edit", new { Model.Id })';">
            Editar
        </button>

        <button type="button" class="btn btn-primary" 
                onclick="window.location='@Url.Action("Details", "Cliente", new { id = Model.Id_Cliente })';">
            Voltar
        </button>

</div>
