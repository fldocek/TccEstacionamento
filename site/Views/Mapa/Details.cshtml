@model Dados.Mapa

@{
    ViewBag.Title = "Details";
}

<div class="col-xs-5">

    <h2>Vaga</h2>

    <div class="row">

        <div class="col-lg-12 form-group">
            @Html.Label("Descrição")

            <p class="form-control-static">@Model.Descricao</p>
        </div>

    </div>

    <div class="row">
        @{
            var base64 = Convert.ToBase64String(Model.Imagem);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                
            <div class="row">
                <div class="col-lg-12">
                    <img src="@imgSrc" width="400" height="400" />
                </div>
            </div>
                
        }
    </div>

    <br />

    <button type="button" class="btn btn-primary" 
                onclick="window.location='@Url.Action("Edit", new { Model.Id })';">
        Editar
    </button>

    <button type="button" class="btn btn-primary" 
                onclick="window.location='@Url.Action("Delete", new { Model.Id })';">
        Deletar
    </button>

</div>
