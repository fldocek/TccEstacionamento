@model Dados.Mapa

@{
    ViewBag.Title = "Delete";
}

<div class="col-xs-5">

    <h2>Vaga</h2>

    <h3>Você tem certeza que quer deletar esse registro?</h3>

    <div class="row">

        <div class="col-lg-12 form-group">
            @Html.Label("Descrição")

            <p class="form-control-static">@Model.Descricao</p>
        </div>

    </div>

    <div class="row">
        @{
            var base64 = Convert.ToBase64String(Model.Imagem);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                
            <div class="row">
                <div class="col-lg-12">
                    <img src="@imgSrc" width="400" height="400" />
                </div>
            </div>
                
        }
    </div>

    <br />
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

            <input type="submit" value="Deletar" class="btn btn-primary">
    
            <button type="button" class="btn btn-primary" 
                onclick="window.location='@Url.Action("Details", new {id = Model.Id })';">
                Cancelar
            </button>
        
    }

</div>    

