@model IEnumerable<Dados.Caminho>

@{
    ViewBag.Title = "Index";
}

<div class="col-xs-5">

    <h2>Caminhos</h2>

    <div class="row">
        <div class="col-lg-12">
            @Html.ActionLink("Criar Novo", "Create")
        </div>
    </div>

    @if (Model.Any())
    {
      
        <table class="table table-bordered table-hover">
            <tr>
                <th>Início</th>

                <th>Vaga</th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Totem.Localizacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vaga.Nome)
                    </td>
                    <td>
                        @Html.ActionLink("Consultar", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
  
    }
    else
    {
        <div class="panel panel-default">
            <div class="panel-body">
                Nenhum caminho cadastrado.
            </div>
        </div>
    }
</div>
