@model Dados.Cliente

@{
    ViewBag.Title = "Edit";
}

<div class="col-lg-6">

    <h2>Cliente</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => model.Data_Cadastrado)
    
        <div class="col-lg-6 form-group">
            @Html.LabelFor(model => model.Nome)

            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
    
        <div class="col-lg-6 form-group">
            @Html.LabelFor(model => model.CPF)

            @Html.TextBoxFor(model => model.CPF, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CPF)
        </div>
    
        <div class="col-lg-6 form-group">
            @Html.LabelFor(model => model.Sexo)

            @Html.DropDownList("Cd_Sexo", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Sexo)
        </div>
    
        <div class="col-lg-6 form-group">
            @Html.Label("Data de nascimento")

            @Html.TextBoxFor(model => model.Data_Nascimento, "{0:dd/MM/yyyy}", new { @class="form-control" })
            @Html.ValidationMessageFor(model => model.Data_Nascimento)
        </div>
    
        <div class="col-lg-12">

            <button type="submit" class="btn btn-primary">Salvar</button>

            <button type="button" class="btn btn-primary" 
                onclick="window.location='@Url.Action("Details", new { id = Model.Id })';">
                Cancelar
            </button>

        </div>

    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>
