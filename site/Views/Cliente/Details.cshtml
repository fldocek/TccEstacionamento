@model Dados.Cliente

@{
    ViewBag.Title = "Details";
}

<div class="col-lg-6">

    <h2>Cliente</h2>

    <div class="row">

        <div class="col-lg-6 form-group">
            <label>Nome</label>
            <p class="form-control-static">@Model.Nome</p>
        </div>

        <div class="col-lg-6 form-group">
            <label>CPF</label>
            <p class="form-control-static">@Model.CPF</p>
        </div>

        <div class="col-lg-6 form-group">
            <label>Sexo</label>
            <p class="form-control-static">@Model.Sexo</p>
        </div>

        <div class="col-lg-6 form-group">
            <label>Data de nascimento</label>
            <p class="form-control-static">@Model.Data_Nascimento.ToShortDateString()</p>
        </div>

        <div class="col-lg-6 form-group">
            <label>Data de Cadastro</label>
            <p class="form-control-static">@Model.Data_Cadastrado.ToShortDateString()</p>
        </div>

    </div>
    
    @Html.ActionLink("Criar Novo", "Create", "Carro", new { id = Model.Id }, null)

    <table class="table table-bordered table-hover">
        <tr>
            <th>Placa</th>

            <th>Marca</th>

            <th></th>
        </tr>

        @foreach (var item in Model.Carro)
        {     
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.ActionLink("Consultar", "Details", "Carro", new { id = item.Id }, null) |
                        @Html.ActionLink("Editar", "Edit",  "Carro", new { id = item.Id }, null) |
                        @Html.ActionLink("Deletar", "Delete",  "Carro", new { id = item.Id }, null)
                </td>
            </tr>   
        }
    </table>
    
    <br />


    <button type="button" class="btn btn-primary" 
                onclick="window.location='@Url.Action("Edit", new { Model.Id })';">
        Editar
    </button>

    <button type="button" class="btn btn-primary" 
                onclick="window.location='@Url.Action("Index")';">
        Voltar
    </button>

</div>
